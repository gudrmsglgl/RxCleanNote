<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.cleannote.model.NoteUiModel"/>
        <variable
            name="holder"
            type="com.cleannote.notelist.holder.SingleDeleteHolder" />
        <variable
            name="noteUiModel"
            type="com.cleannote.model.NoteUiModel" />
        <variable
            name="clickSubject"
            type="io.reactivex.rxjava3.subjects.PublishSubject&lt;NoteUiModel>" />
        <variable
            name="selectPosition"
            type="Integer" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/menu_delete_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:viewHolder="@{holder}"
        app:selectedPos="@{selectPosition}">

        <ImageView
            android:id="@+id/swipe_delete_img"
            android:src="@drawable/ic_delete_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/swipe_delete_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_menu_delete"
            android:textColor="@color/white"
            android:gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>