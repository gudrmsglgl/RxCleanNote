<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.cleannote.extension.UiModelExtsKt"/>
        <variable
            name="vm"
            type="com.cleannote.presentation.notedetail.NoteDetailViewModel" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:layout_width="0dp"
        android:layout_height="9dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintTop_toTopOf="@+id/detail_footer_add"
        app:layout_constraintBottom_toBottomOf="@+id/detail_footer_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/detail_footer_add">

    </View>

    <LinearLayout
        android:id="@+id/detail_footer_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attach_file_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_footer_add"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/divider_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcy_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/detail_footer_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:attachImages="@{UiModelExtsKt.transNoteImageUiModels(vm.finalNote.noteImages)}"/>

    <TextView
        android:id="@+id/tv_footer_no_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/tv_footer_no_images"
        app:layout_constraintTop_toBottomOf="@+id/detail_footer_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:visible="@{vm.finalNote.noteImages.empty}"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>