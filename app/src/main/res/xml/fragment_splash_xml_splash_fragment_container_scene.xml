<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/delay_start"
        motion:constraintSetStart="@id/const_delay"
        motion:constraintSetEnd="@+id/start"
        motion:duration="1500"
        motion:motionInterpolator="linear"
        motion:autoTransition="animateToEnd"
        />

    <Transition
        android:id="@+id/transition_logo_top"
        motion:constraintSetStart="@id/start"
        motion:constraintSetEnd="@+id/const_logo_set"
        motion:autoTransition="animateToEnd"
        motion:motionInterpolator="easeOut"
        motion:duration="1500">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/android_logo"
               motion:framePosition="60"
               motion:keyPositionType="parentRelative"
               motion:percentX="1" />
           <KeyAttribute
               motion:motionTarget="@+id/android_logo"
               motion:framePosition="60"
               android:rotation="-90" />
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/const_delay">
        <Constraint
            android:id="@+id/android_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/bottom"/>
        <Constraint
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/android_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toTopOf="@+id/bottom"/>
        <Constraint
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/const_logo_set">
        <Constraint
            android:id="@+id/android_logo"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:rotation="-45"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.4"
            />
        <Constraint
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:alpha="0"
            android:translationY="100dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"/>
    </ConstraintSet>
</MotionScene>